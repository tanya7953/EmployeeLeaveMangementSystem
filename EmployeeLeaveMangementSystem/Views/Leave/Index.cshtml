@model List<EmployeeLeaveMangementSystem.Models.Leave>

<h2>Leaves</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.EmployeeId</td>
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate</td>
                <td>@leave.EndDate</td>
                <td>@leave.Reason</td>
                
                <td>@leave.Status</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Leave" asp-action="Edit" asp-route-id="@leave.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i> Edit</a>

                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Leave" asp-action="Delete" asp-route-id="@leave.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
