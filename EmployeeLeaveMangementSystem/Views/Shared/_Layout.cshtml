
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeLeaveMangementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <link rel="stylesheet" href="~/EmployeeLeaveMangementSystem.styles.css" asp-append-version="true" />
    <style>
       
        .navbar {
            background-color: #343a40; 
            border-bottom: 1px solid #dee2e6; 
        }

        .navbar-brand {
            color: #ffffff; 
            /* font-weight: bold;  */
        }

        .navbar-nav .nav-link {
            color: #ffffff; 
            /* font-weight: bold;  */
        }


       /*  .footer {
            background-color: #7EC8E3;
            color: #ffffff; 
            text-align: center; 
        } */

        header {
            background-color:dimgrey
        }

            

    </style>
</head>
<body>
    <header style="font-family:Franklin Gothic; font-size:20px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a><img src="/image/grade-management-01.png" style="max-width:55%;max-height:40%"/></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:'Franklin Gothic';font-size:35px">Leave Portal</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                @if(User.IsInRole("Admin")){
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Details">Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Leave" asp-action="Index">Leaves Status</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                }
                else if (User.IsInRole("Employee"))
                {
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Leave" asp-action="Create">Leave Apply</a>
                        </li>
                        
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a>
                            <li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Leave" asp-action="Status">Leave Status</a>
                        </li>
                                
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            </ul>
                            </div>

                    <partial name="_LoginPartial" />
                    
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Employee Leave Management System - <a asp-area="" asp-controller="Home" asp-action=""></a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
